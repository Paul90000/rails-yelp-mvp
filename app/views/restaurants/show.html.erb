<div class="container">

  <div class="d-flex flex-column p-1 align-items-center">
    <h1><%= @restaurant.name %></h1>
    <p>Address: <%= @restaurant.address %></p>
    <p>Phone Number: <%= @restaurant.phone_number %></p>
    <p>Category: <%= @restaurant.category.capitalize %></p>

    <%= link_to "All Restaurants", restaurants_path, class: "link-btn" %>
  </div>

  <div class="d-flex flex-column p-1 align-items-center">
    <h2>Reviews:</h2>
      <ul>
        <% @restaurant.reviews.each do |review| %>
          <li>
            Rating: <%= review.rating %> - Comment: <%= review.content %>
          </li>
        <% end %>
      </ul>

      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "link-btn" %>
  </div>
</div>
